<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/AppFont"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_20"
        android:layout_marginTop="@dimen/spacing_small_10"
        android:layout_marginBottom="@dimen/spacing_small_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_user_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="John Doe" />

    <ImageView
        android:id="@+id/iv_user_arrow"
        android:layout_width="@dimen/arrow_size_20"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/spacing_small_10"
        android:layout_marginEnd="@dimen/spacing_normal_20"
        android:layout_marginBottom="@dimen/spacing_small_10"
        android:contentDescription="@string/arrow"
        android:src="@drawable/ic_arrow_forward"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>